<local:ModuleBaseDlg x:Class="BrainSimulator.Modules.ModuleIntercomDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrainSimulator.Modules"
        mc:Ignorable="d"
        Title="ModuleIntercomDlg Module Dialog" MinHeight="160" Width="150" Background="Gray" ShowInTaskbar="False">
        <Grid Name="theGrid" SizeChanged="TheGrid_SizeChanged">
        <StackPanel Margin="0, 10, 0, 10">
            <Button x:Name="Button_Listen"  Height="50" Width="100" Click="StartStop_Listen">Start Listen</Button>
            <Button x:Name="Button_Record" Height="50" Width="100" PreviewMouseDown="StartStop_Speak" PreviewMouseUp="StartStop_Speak" MouseLeave="StartStop_Speak">Start Speak</Button>
        </StackPanel>
        </Grid>
</local:ModuleBaseDlg>

<local:ModuleBaseDlg x:Class="BrainSimulator.Modules.ModulePodAudioDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrainSimulator.Modules"
        mc:Ignorable="d"
        Title="ModulePodAudioDlg Module Dialog" Height="450" Width="800" Background="Gray" ShowInTaskbar="False">

    <Grid Name="theGrid" SizeChanged="TheGrid_SizeChanged" >
        <Button Content="Play" HorizontalAlignment="Left" Height="25" Margin="150,9,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click"/>
        <Button Content="Stop Audio" HorizontalAlignment="Left" Height="25" Margin="220,9,0,0" VerticalAlignment="Top" Width="80" Click="Stop_Button_Click"></Button>
        <Button x:Name="RecordMic" Content="Record Remote Mic" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="150,9,10,0" Height="25" Click="Record_ButtonClick" />
        <ComboBox x:Name="cbAudioFiles" HorizontalAlignment="Left" Margin="3,10,0,0" VerticalAlignment="Top" Width="140" Height="23" DropDownOpened="ComboBox_DropDownOpened"/>
        <Canvas x:Name="theCanvas" Height="Auto" Width="Auto">
            <Polyline Name="polyline"></Polyline>
        </Canvas>
    </Grid>
</local:ModuleBaseDlg>
